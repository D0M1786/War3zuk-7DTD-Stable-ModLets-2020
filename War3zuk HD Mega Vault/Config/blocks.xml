<configs>
	
<append xpath="/blocks">

<block name="HD Mega Vault">
	<property name="CustomIcon" value="HD Mega Vault"/>
	<property name="DescriptionKey" value="HDMegaVaultDesc"/>
	<property name="Group" value="Building,advBuilding"/>
	<property name="Tags" value="safes,door"/>
	<property name="Class" value="SecureLoot"/>
	<property name="DisplayType" value="blockHardenedMulti"/>
	<property name="Material" value="Kryptonite"/>
	<property name="MaxDamage" value="20000"/>
	<property name="Shape" value="ModelEntity"/>
	<property name="Path" value="solid"/>
	<property name="Model" value="#@modfolder:Resources/HD Floor Safe.unity3d?HD Floor Safe.Prefab"/>
	<property name="MultiBlockDim" value="1,2,1"/>
	<property name="ImposterExchange" value="imposterBlock" param1="18"/>
	<property name="Collide" value="sight,movement,melee,bullet,arrow,rocket"/>
	<property name="IsTerrainDecoration" value="true"/>
	<property name="Place" value="TowardsPlacerInverted"/>
	<property name="LootList" value="1"/>
	<property class="RepairItems"> <property name="resourceForgedIron" value="30"/> </property>
	<drop event="Destroy" count="0"/>
	<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>
	<property name="EconomicValue" value="2100"/>
	<property name="FilterTags" value="floot,ffurniture"/>
</block>

<block name="HD Fuel Storage">
    <property name="Tags" value="door"/>
    <property name="Class" value="SecureLoot"/>
    <property name="CustomIcon" value="HD Fuel Storage"/>
    <property name="Material" value="Kryptonite"/>
    <property name="StabilitySupport" value="false"/>
    <property name="DescriptionKey" value="HDFuelSDesc"/>
    <property name="Shape" value="ModelEntity"/>
    <property name="Path" value="solid"/>
	<property name="MultiBlockDim" value="2,1,1"/>
	<property name="Place" value="TowardsPlacerInverted"/>
    <property name="Model" value="#@modfolder:Resources/HD Fuel Storage.unity3d?HD Fuel Storage.Prefab"/>
    <property name="IsTerrainDecoration" value="true"/>
    <property name="ImposterExchange" value="imposterQuarter" param1="154"/>
    <property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
    <property name="LootList" value="1"/>
    <property class="RepairItems">
        <property name="resourceSteel" value="50"/>
        </property>
    <drop event="Destroy" name="resourceSteel" count="1,5"/>
    <property name="LPHardnessScale" value="8"/>
</block>

</append>
</configs>